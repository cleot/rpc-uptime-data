{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true, // Wrangler handles emit
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@rpc-uptime/shared-types": ["../shared-types/src"] // Path mapping
    },
    "types": [
      "@cloudflare/workers-types" // Include Worker types
    ]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}